APP_NAME="Corp Hauling"
APP_ENV="dev"
APP_BASE_URL="http://killsineve.online/hauling"
APP_BASE_PATH="/hauling"  # IMPORTANT when hosted under a subdirectory
APP_TIMEZONE="Europe/Amsterdam"
APP_DEBUG="1"

DB_HOST="127.0.0.1"
DB_PORT="3306"
DB_NAME="corp_hauling"
DB_USER="corp_hauling_app"
DB_PASS="ChangeMe_123!"

ESI_USER_AGENT="CorpHauling/1.0 (admin@example.local)"
ESI_CACHE_TTL="300"

# Cache driver: db | write_through | tiered
CACHE_DRIVER="db"

# Redis cache settings (required for write_through/tiered)
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
REDIS_PASS=""
REDIS_DB="0"
REDIS_TIMEOUT="1.5"
REDIS_PREFIX="esi_cache:"

# Cache metrics
METRICS_ENABLED="1"
METRICS_FLUSH_INTERVAL_SECONDS="60"

CSRF_KEY="change-me-please"
SESSION_NAME="corp_hauling_session"
SESSION_SECURE="0"

# Break-glass admin allowlist (optional, comma/space-separated). Leave empty by default.
ADMIN_BREAKGLASS_USER_IDS=""
ADMIN_BREAKGLASS_EMAILS=""

EVE_CLIENT_ID=""
EVE_CLIENT_SECRET=""
EVE_SCOPES="esi-contracts.read_corporation_contracts.v1 esi-corporations.read_structures.v1 esi-universe.read_structures.v1"

ESI_BASE_URL="https://esi.evetech.net"
SSO_TOKEN_URL="https://login.eveonline.com/v2/oauth/token"
SSO_VERIFY_URL="https://login.eveonline.com/oauth/verify"

# Discord integration
DISCORD_BOT_TOKEN=""
DISCORD_APPLICATION_ID=""
DISCORD_PUBLIC_KEY=""
DISCORD_GUILD_ID=""

# Cron scheduling overrides (seconds)
CRON_DISCORD_ONBOARD_PORTAL_INTERVAL="300"
CRON_DISCORD_ONBOARD_DISCORD_INTERVAL="300"

# Optional: use EVE SDE JSONL (recommended) or CSVs instead of ESI for universe + stargate graph
# Latest JSONL: https://developers.eveonline.com/static-data/eve-online-static-data-latest-jsonl.zip
# When enabled, the "Initialize universe & maps" button will download + extract into SDE_PATH.
SDE_ENABLED="0"
SDE_PATH="/path/to/sde"

# Optional: used by createdb.php
DB_ROOT_USER="root"
DB_ROOT_PASS=""
DB_APP_HOST="%"

# Simple API auth (optional but recommended for /api endpoints)
API_KEY="change-me"  # sent as X-Api-Key header or ?api_key=

EVE_CALLBACK_URL="http://killsineve.online/hauling/auth/callback"
